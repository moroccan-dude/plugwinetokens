<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="appBundle" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>bundle/appbundle</value>
            </list>
        </property>
        <property name="defaultEncoding" value="UTF-8" />
        <property name="cacheSeconds" value="${bundle.cacheSeconds}" /> <!--  stale bundle cache after 2 minutes (testing value) -->
    </bean>

    <bean id="businessMessageSource" class="com.plugwine.util.DefaultMessageSource">
        <property name="bundle" ref="appBundle" />
    </bean>
    
   <!-- base class for the entity model manager -->
    <bean id="abstractManager" class="com.plugwine.manager.impl.AbstractManagerImpl"
        abstract="true">
        <property name="messageSource" ref="businessMessageSource" />
    </bean>

    <bean id="genericManager" class="com.plugwine.manager.impl.GenericManagerImpl"
        abstract="true" parent="abstractManager" />

    <bean id="configurationManager" class="com.plugwine.manager.impl.ConfigurationVariableManagerImpl"
        parent="genericManager">
<!--         <constructor-arg ref="configurationVariableDao" /> -->
          <property name="configurationVariableDao" ref="configurationVariableDao" />
    </bean>
</beans>
